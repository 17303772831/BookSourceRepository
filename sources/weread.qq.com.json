{
    "name": "微信阅读",
    "url": "weread.qq.com",
    "version": 101,
    "search": {
        "url": "https://i.weread.qq.com/store/search?keyword=${key}",
        "list": "$.books[?(@.bookInfo.format==\"txt\")].bookInfo",
        "name": "$.title",
        "author": "$.author",
        "cover": "$.cover",
        "summary": "$.intro",
        "detail": "/book/info?bookId=${$.bookId}"
    },
    "detail": {
        "status": "$.bookStatus@equal->2",
        "update": "$.updateTime",
        "catalog": "/book/chapterInfos@post->{\"booksIds\":[\"${$.bookId}\"],\"synckeys\":[0]}"
    },
    "catalog": {
        "list": "$..updated[*]",
        "name": "$.title",
        "chapter": "/book/chapterdownload?bookId=${$params.id}&chapters=${$.chapterUid}"
    },
    "chapter": {
    },
    "auth": {
        "login": "https://weread.qq.com/#login",
        "cookie": "weread.qq.com",
        "header": "@header->accessToken:${wr_skey}@header->vid:${wr_vid}",
        "verify": "https://weread.qq.com/web/shelf",
        "logged": "h2.shelf_title@equal->我的书架",
        "vip": "$..vipStatus@equal->1",
        "buy": "$..isBuy@equal->1"
    }
}